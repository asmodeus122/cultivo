-- Script para capturar os RemoteEvents usados no jogo

local ReplicatedStorage = game:GetService("ReplicatedStorage")

-- Função que conecta em todos os RemoteEvents e imprime quando forem acionados
for _, obj in pairs(ReplicatedStorage:GetChildren()) do
    if obj:IsA("RemoteEvent") then
        obj.OnClientEvent:Connect(function(...)
            print("[RemoteEvent Disparado] Nome:", obj.Name, "Args:", ...)
        end)
    elseif obj:IsA("RemoteFunction") then
        -- Caso queira monitorar RemoteFunctions também
        print("[RemoteFunction encontrado] Nome:", obj.Name)
    end
end
