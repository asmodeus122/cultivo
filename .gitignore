    üî• OLD ETERNAL CULTIVATION - MOD MENU
    üì¶ Fun√ß√µes: Auto Cultivation x100, Auto Rebirth, RP Boost
    üñ±Ô∏è Menu com bot√µes (on/off)
    üõ†Ô∏è Criado para executores como Synapse X, Delta, Fluxus (mobile)
    ‚ùó Ajuste os nomes dos RemoteEvents abaixo se necess√°rio
--]]

-- Nomes dos RemoteEvents usados no jogo
local REMOTE_CULTIVATE = "Cultivate"  -- üßò‚Äç‚ôÇÔ∏è Cultiva√ß√£o
local REMOTE_REBIRTH = "Rebirth"      -- üîÅ Renascimento
local REMOTE_RP = "GainRP"            -- üí• Ganhar RP (Rebirth Points)

-- Roblox Services
local ReplicatedStorage = game:GetService("ReplicatedStorage")
local Players = game:GetService("Players")
local LocalPlayer = Players.LocalPlayer

-- Procurar o RemoteEvent (nome gen√©rico usado por muitos jogos)
local Remote = ReplicatedStorage:FindFirstChild("RemoteEvent") -- Altere se o nome real for diferente

-- Vari√°veis de controle
local autoCultivate = false
local autoRebirth = false
local multiRP = false

-- Criar GUI
local ScreenGui = Instance.new("ScreenGui", LocalPlayer:WaitForChild("PlayerGui"))
ScreenGui.Name = "ModMenu"

local Frame = Instance.new("Frame", ScreenGui)
Frame.Size = UDim2.new(0, 220, 0, 210)
Frame.Position = UDim2.new(0, 50, 0, 50)
Frame.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
Frame.BorderSizePixel = 0
Frame.Active = true
Frame.Draggable = true -- permite arrastar o menu

-- Criar bot√µes
local function createButton(name, text, yPos, callback)
    local btn = Instance.new("TextButton", Frame)
    btn.Name = name
    btn.Text = text
    btn.Size = UDim2.new(1, -10, 0, 40)
    btn.Position = UDim2.new(0, 5, 0, yPos)
    btn.BackgroundColor3 = Color3.fromRGB(60, 60, 60)
    btn.TextColor3 = Color3.fromRGB(255, 255, 255)
    btn.Font = Enum.Font.SourceSansBold
    btn.TextSize = 16
    btn.MouseButton1Click:Connect(callback)
end

-- Bot√£o: Auto Cultivation
createButton("CultivateBtn", "üßò Auto Cultivation", 5, function()
    autoCultivate = not autoCultivate
end)

-- Bot√£o: Auto Rebirth
createButton("RebirthBtn", "üîÅ Auto Rebirth", 55, function()
    autoRebirth = not autoRebirth
end)

-- Bot√£o: RP x100
createButton("RPBtn", "üí• RP x100", 105, function()
    multiRP = not multiRP
end)

-- Bot√£o: Fechar Menu
createButton("CloseBtn", "‚ùå Fechar Menu", 155, function()
    ScreenGui:Destroy()
end)

-- LOOP de execu√ß√£o
task.spawn(function()
    while true do
        task.wait(1)

        if autoCultivate then
            pcall(function()
                Remote:FireServer(REMOTE_CULTIVATE, 100000) -- Cultivar com valor alto
            end)
        end

        if autoRebirth then
            pcall(function()
                Remote:FireServer(REMOTE_REBIRTH)
            end)
        end

        if multiRP then
            pcall(function()
                Remote:FireServer(REMOTE_RP, 99999) -- Tenta multiplicar RP
            end)
        end
    end
end)
